<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bagroud"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@drawable/shape1"
        android:padding="7dp"
        android:layout_margin="16dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/redvelvetlogo"
            android:padding="3dp"
            android:background="@drawable/shape"
            android:layout_marginTop="22dp"
            android:elevation="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="9dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="40dp"
                        android:src="@drawable/name"
                        android:padding="2dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name Last Name"
                        android:gravity="center"
                        android:background="@drawable/shape1"
                        android:padding="10dp"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:id="@+id/customer_name"
                        android:inputType="textCapWords"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dob"
                        android:padding="2dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date of Birth"
                        android:gravity="center"
                        android:background="@drawable/shape1"
                        android:padding="10dp"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:inputType="date"
                        android:id="@+id/customer_dob"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="40dp"
                        android:src="@drawable/anni"
                        android:padding="2dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date of Anniversary"
                        android:gravity="center"
                        android:id="@+id/dateofanivarsary"
                        android:background="@drawable/shape1"
                        android:padding="10dp"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:inputType="date"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="40dp"
                        android:src="@drawable/occupation"
                        android:padding="2dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Occupation"
                        android:gravity="center"
                        android:background="@drawable/shape1"
                        android:padding="10dp"
                        android:id="@+id/customer_occupation"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:inputType="textCapWords"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:id="@id/btnNext"
            android:background="@drawable/buttonbg"
            android:layout_margin="32dp"
            android:gravity="center"/>
    </LinearLayout>

</FrameLayout>
